<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MoreActivity" >

    <include 
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/title_layout"/>
    
    <TextView 
         android:id="@+id/MyAccount"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/title_layout"
         style="@style/FilterTextviewStyle"
         android:drawableLeft="@drawable/my_acc_icon"
         android:text="My Account"/>
     
     <View 
         android:id="@+id/MyAccount_view"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_below="@+id/MyAccount"
         android:background="@color/gray"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"/>
     
     <TextView 
         android:id="@+id/NotificationSettings"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/MyAccount_view"
         style="@style/FilterTextviewStyle"
         android:drawableLeft="@drawable/noti_settings_icon"
         android:text="Notification Settings"/>
     
     <View 
         android:id="@+id/NotificationSettings_view"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_below="@+id/NotificationSettings"
         android:background="@color/gray"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"/>
     
     <TextView 
         android:id="@+id/Documents"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/NotificationSettings_view"
         style="@style/FilterTextviewStyle"
         android:drawableLeft="@drawable/document_gray"
         android:visibility="gone"
         android:text="Documents"/>
     
     <View 
         android:id="@+id/Documents_view"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:visibility="gone"
         android:layout_below="@+id/Documents"
         android:background="@color/gray"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"/>
     
     <TextView 
         android:id="@+id/SearchMore"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/Documents_view"
         style="@style/FilterTextviewStyle"
         android:drawableLeft="@drawable/search_more_icon"
         android:text="Search"/>
     
     <View 
         android:id="@+id/SearchMore_view"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_below="@+id/SearchMore"
         android:background="@color/gray"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"/>
     
     <TextView 
         android:id="@+id/Logout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/SearchMore_view"
         style="@style/FilterTextviewStyle"
         android:drawableLeft="@drawable/logout_icon"
         android:text="Logout"/>
    
    <!-- Footer -->
    <FrameLayout 
        android:id="@+id/more_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
