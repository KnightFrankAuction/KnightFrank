<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
        
    <RelativeLayout 
        android:id="@+id/title_layout"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:background="@color/pink"
	    android:layout_alignParentTop="true" >
	    
	    <ImageView 
	        android:id="@+id/pwd_title_back"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/back_arrow"/>
	    
	    <TextView 
	        android:id="@+id/pwd_title_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/TitleStyle"
	        android:layout_toRightOf="@+id/pwd_title_back"
	        android:layout_toLeftOf="@+id/pwd_title_text2"
	        android:text="Change Password" />
	    
	    <TextView 
	        android:id="@+id/pwd_title_text2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="15dp"
	        android:textSize="18sp"
	        android:textColor="@color/white"
	        android:text="Apply" />
	
	</RelativeLayout>
	
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout">
    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            style="@style/FilterTextviewStyle"
	            android:text="Old Password"/>
	        
	        <EditText 
	            android:id="@+id/edit_old_password"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="10dp"
	            android:inputType="textPassword"/>
	        
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            style="@style/FilterTextviewStyle"
	            android:text="New Password"/>
	        
	        <EditText 
	            android:id="@+id/edit_new_password"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="10dp"
	            android:inputType="textPassword"/>
	        
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            style="@style/FilterTextviewStyle"
	            android:text="Re-type Password"/>
	        
	        <EditText 
	            android:id="@+id/edit_retype_password"
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="10dp"
	            android:inputType="textPassword"/>
	        
	    </LinearLayout>
	    
	</ScrollView>	    
    
</RelativeLayout>
