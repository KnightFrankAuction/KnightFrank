<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
 	 xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/bottom_menu_bar"
     android:layout_width="match_parent"
     android:layout_height="70dp"
     android:background="@color/white"
     android:layout_alignParentBottom="true"
     android:weightSum="5"
     android:paddingTop="5dp"
     android:orientation="horizontal">
     
     <ImageView 
         android:id="@+id/footer_home"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:src="@drawable/home_icon"/>
     
     <ImageView 
         android:id="@+id/footer_shortlist"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:src="@drawable/shortlist_icon"/>
     
     <ImageView 
         android:id="@+id/footer_about"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:src="@drawable/about_icon"/>
     
     <ImageView 
         android:id="@+id/footer_enquiry"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:src="@drawable/enquiry_icon"/>
     
     <ImageView 
         android:id="@+id/footer_menu"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:src="@drawable/menu_icon"/>
        
        
</LinearLayout>
