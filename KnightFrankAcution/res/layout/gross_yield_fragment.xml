<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/layout_gross_property_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        
        <TextView 
            android:id="@+id/txt_gross_property_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FilterTextviewStyle"
            android:gravity="center_vertical"
            android:text="Property Price (S$)"/>
        
        <TextView 
            android:id="@+id/gross_property_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FilterTextviewStyle"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/arrow_gross_property_price"
            android:text="523,123.21"/>
        
        <ImageView 
            android:id="@+id/arrow_gross_property_price"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:src="@drawable/right_arrow_gray"/>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginBottom="15dp"
	        android:layout_below="@+id/arrow_gross_property_price"
	        android:background="@color/gray"/>
        
    </RelativeLayout>
    
   <RelativeLayout 
        android:id="@+id/layout_gross_annual_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="@color/white">
        
        <TextView 
            android:id="@+id/txt_anual_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FilterTextviewStyle"
            android:gravity="center_vertical"
            android:text="Annual Rental Price (S$)"/>
        
        <TextView 
            android:id="@+id/anual_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FilterTextviewStyle"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/arrow_anual_price"
            android:text="4000"/>
        
        <ImageView 
            android:id="@+id/arrow_anual_price"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:src="@drawable/right_arrow_gray"/>
        
    </RelativeLayout>
    
    <Button 
        android:id="@+id/gross_yield_calculate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/pink"
        android:layout_margin="30dp"
        style="@style/TitleStyle"
        android:text="Calculate"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:gravity="right">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black1"
            android:text="Gross Yield"/>
        
        <TextView 
            android:id="@+id/gross_yield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FilterTextviewStyle"
            android:text="4.5%"/>
        
    </LinearLayout>
   

</LinearLayout>
